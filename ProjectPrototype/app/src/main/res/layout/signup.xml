<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="Store2Door"
        android:layout_gravity="center"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold"
        android:id="@+id/t1"
        android:layout_marginBottom="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="10dp"
        android:textColor="#000000"
        android:typeface="monospace"
        android:layout_below="@+id/t1"
        android:layout_gravity="left"
        android:gravity="start"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:textSize="17dp"
        android:id="@+id/name"
        android:text="Name"/>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:ems="10"
        android:gravity="end"
        android:hint="Name"
        android:inputType="text"
        android:layout_marginRight="30dp"
        android:maxLines="1"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_above="@+id/email"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:textColor="#000000"
        android:typeface="monospace"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/name"
        android:layout_marginLeft="20dp"
        android:textSize="17dp"
        android:id="@+id/email"
        android:text="Email"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:layout_marginRight="30dp"
        android:maxLines="1"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_above="@+id/pas"
        android:layout_alignStart="@+id/editText2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"
        android:typeface="monospace"
        android:layout_below="@+id/email"
        android:layout_marginLeft="20dp"
        android:textSize="17dp"
        android:id="@+id/pas"
        android:text="Password"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:maxLines="1"
        android:layout_marginRight="30dp"
        android:id="@+id/password"
        android:inputType="textPassword"
        android:hint="Password"
        android:textAlignment="center"
        android:singleLine="true"
        android:textColor="#000000"
        android:layout_gravity="right"
        android:layout_alignBaseline="@+id/pas"
        android:layout_alignBottom="@+id/pas"
        android:layout_alignStart="@+id/editText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:textColor="#000000"
        android:typeface="monospace"
        android:layout_marginBottom="12dp"
        android:layout_below="@+id/password"
        android:layout_marginLeft="20dp"
        android:textSize="17dp"
        android:id="@+id/conpass"
        android:text="Confirm\nPassword"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:maxLines="1"
        android:id="@+id/confirmPassword"
        android:hint="Confirm Password"
        android:layout_marginRight="30dp"
        android:textAlignment="center"
        android:singleLine="true"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:layout_gravity="right"
        android:layout_alignBottom="@+id/conpass"
        android:layout_alignStart="@+id/password" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:textColor="#000000"
        android:layout_below="@+id/confirmPassword"
        android:typeface="monospace"
        android:layout_marginLeft="20dp"
        android:textSize="17dp"
        android:id="@+id/phoneno"
        android:text="PhoneNo"/>



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:maxLines="1"
        android:id="@+id/phone"
        android:hint="Phone No"
        android:inputType="phone"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/confirmPassword"
        android:layout_marginRight="30dp"
        android:textAlignment="center"
        android:singleLine="true"
        android:textColor="#000000"
        android:layout_gravity="right"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textStyle="bold"
        android:id="@+id/signUp"
        android:backgroundTint="#00000000"
        android:layout_below="@+id/phone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

</RelativeLayout>