<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Store2Door"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold"
        android:id="@+id/t1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/t2"
        android:layout_below="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="55dp"
        android:textColor="#000000"
        android:text="PhoneNo/\nE-Mail"
        android:textSize="17dp"
        android:layout_marginBottom="20dp"
        android:lines="2"
        android:singleLine="false"
        android:typeface="monospace"
        />



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="13"
        android:maxLines="1"
        android:id="@+id/phoneEmail"
        android:hint="PhoneNo/Email"
        android:textAlignment="center"
        android:singleLine="true"
        android:layout_alignBaseline="@+id/t2"
        android:layout_alignBottom="@+id/t2"
        android:textColor="#000000"
        android:layout_alignStart="@+id/pass"
        android:layout_alignEnd="@+id/pass" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emptyMail"
        android:layout_below="@+id/phoneEmail"
        android:text="Required field."
        android:textColor="#000000"
        android:layout_toRightOf="@id/t2"
        android:layout_marginLeft="50dp"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/incorrectMail"
        android:layout_below="@+id/phoneEmail"
        android:text="Required field."
        android:textColor="#000000"
        android:layout_toRightOf="@id/t2"
        android:layout_marginLeft="50dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/t3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="Password"
        android:textColor="#000000"
        android:typeface="monospace"
        android:layout_marginLeft="20dp"
        android:textSize="17dp"
        android:layout_below="@+id/t2"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:textColor="#000000"
        android:layout_marginRight="20dp"
        android:ems="13"
        android:hint="Password"
        android:textAlignment="center"
        android:inputType="textPassword"
        android:id="@+id/pass"
        android:layout_alignBottom="@+id/t3"
        android:layout_toEndOf="@+id/t2" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emptyPassword"
        android:layout_below="@+id/pass"
        android:text="Required field."
        android:textColor="#000000"
        android:layout_toRightOf="@id/t3"
        android:layout_marginLeft="50dp"
        android:visibility="invisible"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/incorrectPassword"
        android:layout_below="@+id/pass"
        android:text="IncorrectPassword."
        android:textColor="#000000"
        android:layout_toRightOf="@id/t3"
        android:layout_marginLeft="50dp"
        android:visibility="invisible"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forgotPassword"
        android:layout_below="@+id/incorrectPassword"
        android:layout_alignParentRight="true"
        android:text="Forgot Password."
        android:layout_marginRight="30dp"
        android:textColor="#000000"
        android:textAllCaps="false"
        android:backgroundTint="#00000000"
        android:background="#00000000"
        android:layout_marginLeft="50dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:textStyle="bold"
        android:id="@+id/login"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="#00000000"
        android:layout_below="@+id/forgotPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />
</RelativeLayout>